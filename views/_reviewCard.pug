mixin reviewCard(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`${review.user.photo}`, alt=`${review.user.name}`)
            h6.reviews__user= review.user.name
        p.reviews__text &ldquo;#{review.review}
        .reviews__rating
            each star in [1, 2, 3, 4, 5]
                svg.reviews__star(class=`reviews__star--${Math.ceil(review.rating) >= star ? 'active' : 'inactive'}`)
                    use(xlink:href="/img/sprite.svg#icon-star")